<Window x:Class="Calculator8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFE6BBBB" Padding="18,0,0,0">
    <Grid Name="GroupButton">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBox Name="text" Grid.Row="0" Grid.ColumnSpan="5" BorderBrush="#FFFAFAFA" Grid.Column="1" Margin="5,0,-10,0" Text="34"/>
        <Button Grid.Column="0" Background="#FFDACDEE" FontSize="24" Margin="0,72,0,72" Grid.RowSpan="3" Grid.ColumnSpan="2" Padding="20,1,1,1">(</Button>
        <Button Grid.Column="2" Background="#FFDACDEE" FontSize="24" Grid.ColumnSpan="2" Margin="0,72,0,72" Grid.RowSpan="3" Padding="20,1,1,1">)</Button>
        <Button Grid.Column="4" Background="#FFDACDEE" FontSize="24" Margin="0,72,0,72" Grid.RowSpan="3" Padding="20,1,1,1">C</Button>
        <Button Grid.Column="5" Background="#FFDACDEE" FontSize="24" Margin="0,72,0,72" Grid.RowSpan="3" Padding="20,1,1,1">x</Button>
        <Button Grid.Row="2" Grid.Column="0" Background="#FFDACDEE" FontSize="24" Grid.ColumnSpan="2" Padding="20,1,1,1">1</Button>
        <Button Grid.Row="2" Grid.Column="2" Background="#FFDACDEE" FontSize="24" Grid.ColumnSpan="2" Padding="20,1,1,1">2</Button>
        <Button Grid.Row="2" Grid.Column="4" Background="#FFDACDEE" FontSize="24" Padding="20,1,1,1">3</Button>
        <Button Grid.Row="2" Grid.Column="5" Background="#FFDACDEE" FontSize="24" Padding="20,1,1,1" UseLayoutRounding="True" OpacityMask="#FFF2E9E9" BorderBrush="#FFEDAFAF">+</Button>
        <Button Grid.Row="2" Grid.Column="0" Background="#FFDACDEE" FontSize="24" Margin="0,72,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2" Padding="20,1,1,1">4</Button>
        <Button Grid.Row="2" Grid.Column="2" Background="#FFDACDEE" FontSize="24" Grid.ColumnSpan="2" Margin="0,72,0,0" Grid.RowSpan="2" Padding="20,1,1,1">5</Button>
        <Button Grid.Row="2" Grid.Column="4" Background="#FFDACDEE" FontSize="24" Margin="0,72,0,0" Grid.RowSpan="2" Padding="20,1,1,1">6</Button>
        <Button Grid.Row="2" Grid.Column="5" Background="#FFDACDEE" FontSize="24" Margin="0,72,0,0" Grid.RowSpan="2" Padding="20,1,1,1" BorderBrush="#FFE9CCCC">-</Button>
        <Button Grid.Row="3" Grid.Column="0" Background="#FFDACDEE" FontSize="24" Margin="0,72,0,72" Grid.RowSpan="3" Grid.ColumnSpan="2" Padding="20,1,1,1">7</Button>
        <Button Grid.Row="3" Grid.Column="2" Background="#FFDACDEE" FontSize="24" Grid.ColumnSpan="2" Margin="0,72,0,72" Grid.RowSpan="3" Padding="20,1,1,1">8</Button>
        <Button Grid.Row="3" Grid.Column="4" Background="#FFDACDEE" FontSize="24" Padding="20,1,1,1" Margin="0,72,0,72" Grid.RowSpan="3">9</Button>
        <Button Grid.Row="3" Grid.Column="5" Background="#FFDACDEE" FontSize="24" Margin="0,72,0,72" Grid.RowSpan="3" Padding="20,1,1,1">÷</Button>
        <Button Grid.Row="5" Grid.Column="0" Background="#FFDACDEE" FontSize="24"  Grid.ColumnSpan="2" Padding="20,1,1,1">%</Button>
        <Button Grid.Row="5" Grid.Column="2" Background="#FFDACDEE" FontSize="24" Grid.ColumnSpan="2" Padding="20,1,1,1">0</Button>
        <Button Grid.Row="5" Grid.Column="4" Background="#FFDACDEE" FontSize="24" Padding="20,1,1,1">,</Button>
        <Button Grid.Row="5" Grid.Column="5" FontSize="24" Padding="20,1,1,1" Background="#FF996DF1">=</Button>
        
    </Grid>
</Window>
